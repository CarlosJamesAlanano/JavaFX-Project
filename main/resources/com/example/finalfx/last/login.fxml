<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalfx.last.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label layoutX="210.0" layoutY="110.0" prefHeight="90.0" prefWidth="380.0" text="Welcome To Chauffeur!" textFill="#2f2525">
            <font>
                <Font name="Tw Cen MT Condensed" size="55.0" />
            </font>
        </Label>
        <TextField fx:id="etEmail" layoutX="265.0" layoutY="232.0" prefHeight="30.0" prefWidth="271.0" promptText="example@gmail.com" />
        <PasswordField fx:id="etPassword" layoutX="265.0" layoutY="292.0" prefHeight="30.0" prefWidth="271.0" />
        <Label layoutX="265.0" layoutY="200.0" text="Email">
            <font>
                <Font name="Tw Cen MT Condensed" size="26.0" />
            </font>
        </Label>
        <Label layoutX="265.0" layoutY="262.0" text="Password">
            <font>
                <Font name="Tw Cen MT Condensed" size="26.0" />
            </font>
        </Label>
        <Button fx:id="btnLogin" layoutX="346.0" layoutY="336.0" mnemonicParsing="false" onMouseClicked="#onLogin" prefHeight="25.0" prefWidth="109.0" text="Login">
            <font>
                <Font name="Tw Cen MT Condensed" size="16.0" />
            </font>
        </Button>
        <Label layoutX="363.0" layoutY="477.0" prefHeight="18.0" prefWidth="63.0" text="No Account?">
            <font>
                <Font name="Tw Cen MT Condensed" size="16.0" />
            </font>
        </Label>
        <Label fx:id="btnRegister" layoutX="363.0" layoutY="495.0" onMouseClicked="#onRegister" prefHeight="18.0" prefWidth="75.0" text="Register Now">
            <font>
                <Font name="Tw Cen MT Condensed" size="16.0" />
            </font>
        </Label>
    </children>


</AnchorPane>
