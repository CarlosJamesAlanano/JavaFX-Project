<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500" prefWidth="800" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.finalfx.last.registerController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label layoutX="210.0" layoutY="109.0" prefHeight="90.0" prefWidth="380.0" text="Register for Chauffeur" textFill="#2f2525">
            <font>
                <Font name="Tw Cen MT Condensed" size="55.0" />
            </font>
        </Label>
        <TextField fx:id="etNewEmail" layoutX="264.0" layoutY="229.0" prefHeight="30.0" prefWidth="271.0" promptText="example@gmail.com" />
        <PasswordField fx:id="etNewPassword" layoutX="264.0" layoutY="291.0" prefHeight="30.0" prefWidth="271.0" />
        <Label layoutX="264.0" layoutY="199.0" text="Email">
            <font>
                <Font name="Tw Cen MT Condensed" size="26.0" />
            </font>
        </Label>
        <Label layoutX="264.0" layoutY="259.0" text="Password">
            <font>
                <Font name="Tw Cen MT Condensed" size="26.0" />
            </font>
        </Label>
        <Button fx:id="btnReg" layoutX="345.0" layoutY="338.0" mnemonicParsing="false" onAction="#onRegister" prefHeight="25.0" prefWidth="109.0" text="Register">
            <font>
                <Font name="Tw Cen MT Condensed" size="16.0" />
            </font>
        </Button>
        <Label layoutX="357.0" layoutY="466.0" prefHeight="18.0" prefWidth="86.0" text="Have an Account?">
            <font>
                <Font name="Tw Cen MT Condensed" size="16.0" />
            </font>
        </Label>
        <Label fx:id="btnLogin" layoutX="386.0" layoutY="484.0" onMouseClicked="#onLogin" prefHeight="18.0" prefWidth="28.0" text="Login">
            <font>
                <Font name="Tw Cen MT Condensed" size="16.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
